%p
  %strong= best_in_place embeddable, :prompt, :type => :textarea, :path => main_app.embeddable_open_response_path, :nil => 'Click to edit prompt.'
  - if @learner and (saveable = Saveable::OpenResponse.find_by_learner_id_and_open_response_id(@learner.id, embeddable.id))
    - value = saveable.answer if saveable.answered?
  %textarea{:name => "questions[embeddable__#{embeddable.class.to_s.demodulize.underscore}_#{embeddable.id}]"}
    = value